{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      "@oligami/rustc-browser-wasi_shim": ["./packages/lib/dist/*"]
    }
  },
  "include": [],
  "references": [
    {
      "path": "./packages/lib"
    },
    {
      "path": "./packages/page"
    }
  ]
}
