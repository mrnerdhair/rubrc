{
  "name": "rubrc",
  "version": "1.1.1",
  "description": "rubrc root",
  "private": true,
  "author": "oligami <nziq53@gmail.com> (https://github.com/oligamiq)",
  "license": "MIT OR Apache-2.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "tsc --build --clean && rimraf packages/lib/dist packages/page/dist",
    "build": "tsc --build --verbose",
    "fmt": "npx @biomejs/biome format --write .",
    "check": "npx @biomejs/biome check && tsc --build --verbose --noEmit",
    "lint": "npx @biomejs/biome lint ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "solid-devtools": "^0.31.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "unplugin-swc": "^1.5.1",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-solid": "^2.11.0"
  }
}
